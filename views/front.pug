    body
        nav.navbar.navbar-inverse.navbar-fixed-top
            .container-fluid
                .navbar-header
                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') 起死回生医疗系统
        .container-fluid
            .row
                .col-sm-3.col-md-2.sidebar
                    ul.nav.nav-sidebar
                        li.nav-item.active
                            a.nav-link(href='#registor', data-toggle='tab')
                                | 挂号列表
                                span.sr-only (current)
                        li.nav-item
                            a.nav-link(href='#chat', data-toggle='tab') 预诊窗口
                .tab-content.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
                    #registor.tab-pane.active
                        h2.sub-header 挂号列表
                        .table-responsive
                            table#regTable.table.table-striped
                                thead
                                    tr
                                        th id
                                        th 名字
                                        th 挂号时间
                                        th 挂号科室
                                        th 你猜这里该填什么
                                tbody
                        button#reg.btn.pull-right.btn-lg.btn-primary(data-toggle='modal', data-target='#regist') 挂号
                        #regist.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
                            .modal-dialog
                                .modal-content
                                    .modal-header
                                        h4.modal-title 挂号表单
                                    .modal-body
                                        form.bs-example.bs-example-form(role='form' method='post')
                                            .input-group
                                                span.input-group-addon 病人email
                                                input.form-control(type='email', placeholder='病人id',name='email',class='form-control',required, autofocus)
                                            br
                                            .dropdown
                                                select.btn.dropdown-toggle.btn-lg.btn-block(style='height: 40px',name='dept')
                                                    option(value='骨科') 骨科
                                                    option(value='内科') 内科
                                                    option(value='外科') 外科
                                                    option(value='五官科') 五官科
                                            .modal-footer
                                                button.btn.btn-default(type='button', data-dismiss='modal') 关闭
                                                button#sendReg.btn.btn-primary(type='submit') 提交
                    #chat.tab-pane.fade
                        div(style='padding: 20px 100px 10px;')
                            form(role='form')
                                .form-group
                                    label(for='chat') 预诊框
                                    textarea#chatContent.form-control(readonly='', rows='16')
                        div(style='padding: 20px 100px 10px;')
                            form.bs-example.bs-example-form(role='form' method='post')
                                .input-group.col-lg-12
                                    input.form-control(type='text', placeholder='请输入发送内容',required,name='chat')
                                    span.input-group-btn
                                        button#send.btn.btn-default(type='submit') 发送

